{
    "name": "DwrOpenWeather",
    "type": "library",
    "description": "Simply web widget showing weather in defined location based on Open Weather API",
    "keywords": [
        "weather",
        "open weather",
	"weather rest api"
    ],
    "homepage": "https://github.com//dariuszwrzesien//DwrOpenWeather",
    "license": "MIT",
    "authors": [
        {
            "name": "Dariusz Wrzesie≈Ñ",
            "email": "dariuszwrzesien@gmail.com",
            "homepage": "https://github.com/dariuszwrzesien/DwrOpenWeather",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3",
	    "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Dwr\\": "src/Dwr"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dwr\\": "tests/Dwr"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
